<Page x:Class="EduShare_Escritorio.Vistas.MenuPrincipal"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EduShare_Escritorio.Vistas"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280">

    <Grid Background="White">
        <Image Source="/Imagenes/Iconos/LogoEduShare.png" Margin="60,1,1100,656"/>
        
        <Grid Margin="0,129,0,0" >
         <Image Source="/Imagenes/Fondos/MenuPrincipal.jpg" Margin="0,17,0,-17"/>
            <TextBlock Text="Has aprendido mucho, ¡ahora compártelo con otros! 🎓 " FontSize="35"  FontFamily="Times New Roman"  VerticalAlignment="Top" Foreground="White" Height="40" Margin="92,365,387,0"/>
            <TextBlock Text="Domina cualquier materia con recursos creados por estudiantes como tú, en una comunidad que aprende y crece unida " FontSize="20" FontFamily="Times New Roman"  VerticalAlignment="Top" Foreground="White" Height="40" Margin="92,439,103,0"/>
        <TextBlock Text="[EduShare]" FontSize="70"  FontFamily="Times New Roman"  VerticalAlignment="Top" Foreground="White" Height="113" Margin="92,62,839,0"/>
        </Grid>
        <Grid Margin="242,16,606,0" Height="43" VerticalAlignment="Top">
            <Border CornerRadius="10" BorderBrush="Black" BorderThickness="1" Background="White">
                <Grid>
                    <TextBox x:Name="BuscarTextBox"
                     Margin="10,0,47,0"
                     VerticalContentAlignment="Center"
                     FontFamily="Calibri"
                     FontSize="20"
                     BorderThickness="0"
                     Background="Transparent"
                     Foreground="Gray"
                     Text="Buscar"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus"/>
                    <Image Source="/Imagenes/Iconos/Lupa.jpg"
                           Cursor="Hand"
                           Width="35"
                           Height="38"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           Margin="384,0,0,0"/>
                </Grid>
            </Border>
        </Grid>

        <ToggleButton x:Name="tgbtn_MenuLogin"
                  Cursor="Hand"
                  Width="176"
                  FontFamily="Calibri"
                  FontSize="18"
                  Foreground="#2e2b2b"
                  HorizontalContentAlignment="Right"
                  VerticalContentAlignment="Center"
                  Content="Iniciar sesión"
                  Background="Transparent"
                  BorderThickness="0" Margin="1020,19,84,665">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                        CornerRadius="10"
                        Background="White"
                        BorderBrush="Transparent"
                        BorderThickness="0"
                        Padding="10" Cursor="" Margin="-11,-6,16,0">
                        <StackPanel Orientation="Horizontal" Margin="8,-10,9,-10">
                            <Image Source="/Imagenes/Iconos/Usuario.png"
                                   Width="31" Height="29"
                                   VerticalAlignment="Center"/>
                            <TextBlock Text="Iniciar sesión"
                                       VerticalAlignment="Center"
                                       Margin="5,0,5,0"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuLogin}"
               Placement="Bottom"
               HorizontalOffset="-89"
               IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuLogin, Mode=TwoWay}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="¡Te damos la bienvenida a EduShare!" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="🌐 Preguntas frecuentes y ayuda" Cursor="Hand"  Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="👤 Iniciar sesión" Margin="5" MouseDown="IrAlLogin"  Cursor="Hand" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>


        <ToggleButton x:Name="tgbtn_Registrarse"
              Cursor="Hand"
              Width="176"
              FontFamily="Calibri"
              FontSize="18"
              Foreground="#2e2b2b"
              HorizontalContentAlignment="Right"
              VerticalContentAlignment="Center"
              Content="➕ Regístrate"
              Background="Transparent"
              BorderThickness="0" Margin="802,19,302,665">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                                CornerRadius="10"
                                Background="White"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                Padding="10" Cursor="" Margin="-11,-6,16,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="126">
                            <TextBlock Text="➕ Regístrate"
                               VerticalAlignment="Center"
                               Margin="5,0,5,0"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                </ControlTemplate>

            </ToggleButton.Template>
        </ToggleButton>


        <ToggleButton x:Name="tgbtn_MenuCategoriasDocumento"
                   Cursor="Hand"
                   FontWeight="Bold"
                   FontSize="15"
                   Foreground="Black"
                   HorizontalContentAlignment="Right"
                   VerticalContentAlignment="Center"
                   Background="Transparent"
                   BorderThickness="0" Margin="199,99,902,596">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                             CornerRadius="10"
                             Background="White"
                             BorderBrush="Transparent"
                             BorderThickness="0"
                             Padding="10" Cursor="" Margin="-11,-7,53,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="120">
                            <TextBlock Text="Categorías   📂 "
                                VerticalAlignment="Center"
                                Margin="10,0,0,0" Width="105" Height="24"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuCategoriasDocumento}"
                   Placement="Bottom"
                   HorizontalOffset="-65"
                   IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuCategoriasDocumento, Mode=TwoWay}"
                   StaysOpen="False"
                   AllowsTransparency="True"
                   PopupAnimation="Slide">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="📂 Categoría de documento" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="Apuntes" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Resúmenes" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Guías de estudio" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Exámenes anteriores" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Tareas" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Presentaciones" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>

        <ToggleButton x:Name="tgbtn_MenuNivelEducativo"
            Cursor="Hand"
            FontWeight="Bold"
            FontSize="15"
            Foreground="Black"
            HorizontalContentAlignment="Right"
            VerticalContentAlignment="Center"
            Background="Transparent"
            BorderThickness="0" Margin="375,99,726,596">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                      CornerRadius="10"
                      Background="White"
                      BorderBrush="Transparent"
                      BorderThickness="0"
                      Padding="10" Cursor="" Margin="-11,-7,9,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="162">
                            <TextBlock Text="Nivel Educativo  🎓 "
                         VerticalAlignment="Center"
                         Margin="10,0,0,0" Width="144" Height="24"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuNivelEducativo}"
               Placement="Bottom"
               HorizontalOffset="-60"
               IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuNivelEducativo, Mode=TwoWay}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="🎓 Nivel académico del contenido" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="Preparatoria" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Universidad" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Técnico / Profesional" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Otro" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>

        <ToggleButton x:Name="tgbtn_MenuMaterias"
                Cursor="Hand"
                FontWeight="Bold"
                FontSize="15"
                Foreground="Black"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0" Margin="580,99,521,596">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                          CornerRadius="10"
                          Background="White"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Padding="10" Cursor="" Margin="-11,-7,69,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="107">
                            <TextBlock Text="Materias  📚"
                 VerticalAlignment="Center"
                 Margin="10,0,0,0" Width="92" Height="24"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuMaterias}"
               Placement="Bottom"
               HorizontalOffset="-59"
               IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuMaterias, Mode=TwoWay}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="📚 Área de conocimiento" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="Matemáticas" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Física" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Química" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Historia" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Biología" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Programación" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>

        <ToggleButton x:Name="tgbtn_MenuEtiquetas"
                Cursor="Hand"
                FontWeight="Bold"
                FontSize="15"
                Foreground="Black"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0" Margin="737,99,364,596">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                          CornerRadius="10"
                          Background="White"
                          BorderBrush="Transparent"
                          BorderThickness="0"
                          Padding="10" Cursor="" Margin="-11,-7,69,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="107">
                            <TextBlock Text="Etiquetas  🏷️"
                 VerticalAlignment="Center"
                 Margin="10,0,0,0" Width="92" Height="24"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>

        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuEtiquetas}"
               Placement="Bottom"
               HorizontalOffset="-119"
               IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuEtiquetas, Mode=TwoWay}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="🏷️ Documentos con etiquetas más usadas" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="Parcial 1" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Examen final" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Resumen corto" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="PDF" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Ejercicios resueltos" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Teoría" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>

        <ToggleButton x:Name="tgbtn_MenuFecha"
                Cursor="Hand"
                FontWeight="Bold"
                FontSize="15"
                Foreground="Black"
                HorizontalContentAlignment="Right"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0" Margin="902,99,199,596">
            <ToggleButton.Template>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="border"
                  CornerRadius="10"
                  Background="White"
                  BorderBrush="Transparent"
                  BorderThickness="0"
                  Padding="10" Cursor="" Margin="-11,-7,-18,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,-10,0,-10" Width="193">
                            <TextBlock Text="Filtro por Popularidad  ⭐"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0" Width="175" Height="24"/>

                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#f5f5f5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </ToggleButton.Template>
        </ToggleButton>
        <Popup PlacementTarget="{Binding ElementName=tgbtn_MenuFecha}"
               Placement="Bottom"
               HorizontalOffset="20"
               IsOpen="{Binding IsChecked, ElementName=tgbtn_MenuFecha, Mode=TwoWay}"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide" Cursor="">
            <Border Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="10">
                <StackPanel>
                    <TextBlock Text="⭐ Ordenar por" Margin="5" FontWeight="Bold" FontSize="16"/>
                    <Separator Margin="5" Height="1" Background="#DDD"/>
                    <TextBlock Text="Más recientes" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Más descargados" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Mejor calificados" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                    <TextBlock Text="Más comentados" Cursor="Hand" Margin="5" FontFamily="Calibri" FontSize="15"/>
                </StackPanel>
            </Border>
        </Popup>


    </Grid>
</Page>
